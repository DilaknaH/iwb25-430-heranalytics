# Auto-detection for text files
* text=auto

# Ballerina source files (primary focus)
*.bal text eol=lf diff=ballerina
Ballerina.toml text eol=lf
Dependencies.toml text eol=lf
*.json text eol=lf

# Configuration files
Config.toml text eol=lf
*.config text eol=lf
*.conf text eol=lf
*.env text eol=lf
.env.* text eol=lf

# Documentation
*.md text eol=lf
README text eol=lf
*.txt text eol=lf
*.adoc text eol=lf

# Build and output files (binary/treat as binary)
*.balx binary
target/** binary
.build/** binary
*.jar binary
*.class binary

# Ballerina cache and generated files
.ballerina/** binary
generated/** binary

# Dependency files
*.jar binary
*.balo binary

# Test files
*.test.bal text eol=lf
tests/** text eol=lf

# Data files that might be used with the service
*.json data text eol=lf
*.csv data text eol=lf
*.data text eol=lf

# Binary assets (images, etc.)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary

# Archive files
*.zip binary
*.tar binary
*.gz binary

# Export ignore patterns (exclude from distribution archives)
/target/ export-ignore
/.ballerina/ export-ignore
/.build/ export-ignore
/.devcontainer/ export-ignore
/.github/ export-ignore
/.vscode/ export-ignore
/.idea/ export-ignore
/coverage/ export-ignore
/test-reports/ export-ignore
*.log export-ignore

# OS metadata files
.DS_Store export-ignore
Thumbs.db export-ignore
*.swp export-ignore
*.swo export-ignore

# GitHub linguist overrides for better language detection
*.bal linguist-language=Ballerina
Ballerina.toml linguist-language=TOML

# Diff attributes for programming languages
*.bal diff=ballerina
*.java diff=java
*.js diff=javascript
*.py diff=python
*.json diff=json

# Line ending normalization exceptions (if any binary files might be misdetected)
# -binary -text
